<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/angelPic"
            android:layout_width="500px"
            android:layout_height="500px"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/studentpic" />

        <TextView
            android:id="@+id/ratingHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="40dp"
            android:textAlignment="center"
            android:textColor="#9b59b6"
            android:text="How was Royce?" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="#9b59b6"
            android:text="" />

        <EditText
            android:id="@+id/reviewcomment"
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:layout_weight="1"
            android:background="#ecf0f1"
            android:backgroundTint="#ecf0f1"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="#9b59b6"
            android:hint="Write a review (optional)"
            android:imeOptions="actionDone"
            />

        <Button
            android:id="@+id/reviewsubmit"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#9b59b6"
            android:backgroundTint="#9b59b6"
            android:onClick="onClick"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:visibility="visible" />

    </LinearLayout>
</ScrollView>